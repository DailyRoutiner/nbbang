<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="MEETING">
	<resultMap type="meetingDTO" id="meetingResultMap">
		<result property="meetingType" column="MEETING_TYPE" />
		<result property="meetNo" column="MEETNO" />
		<result property="meetName" column="MEETNAME" />
		<result property="place" column="PLACE" />
		<result property="meetDate" column="MEETDATE" />
		<result property="totalfee" column="TOTALFEE" />
		<result property="manageNo" column="MANAGENO" />
		<result property="memNo" column="MEMNO" />
	</resultMap>

	<!-- 모임 등록 -->
	<insert id="insertMeeting" parameterType="meetingDTO">
		INSERT INTO meeting(meetno, meeting_type, meetname, place, meetdate, manageno) VALUES(MEETING_SQ.NEXTVAL, #{meetingType}, #{meetName}, #{place}, #{meetDate}, #{manageNo})
	</insert>
	
	<!-- 멤버에 있는 모임들 불러오기  -->
	<select id="meetingList" parameterType="meetingDTO" resultMap="meetingResultMap">
		SELECT * FROM meeting_info WHERE MEMNO =#{memNo}
	</select>
	
	<!-- 사용자가 만든 마지막 meetno가지고 오기 -->
	<select id="selectOne" parameterType="meetingDTO" resultMap="meetingResultMap">
		SELECT * FROM meeting where manageNo=#{manageNo} and meetNo = (select max(meetNo) from meeting where manageNo=#{manageNo})
	</select>
	
	<select id="meetSelect" parameterType="int" resultMap="meetingResultMap">
		SELECT * FROM meeting where meetno = #{meetNo}
	</select>
	
	<!-- 모임목록을 지우기 -->
	<delete id="deleteMeeting" parameterType="meetingDTO">
		delete from meeting where meetNo=#{meetNo} and manageNo=#{manageNo}
	</delete>

	
</mapper>
